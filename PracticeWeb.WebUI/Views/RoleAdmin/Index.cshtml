@using PracticeWeb.WebUI.Infrastructure;
@using Practice.Domain.Entities;
@model IEnumerable<AppRole>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CategoryMenu{
    @Html.Action("Menu", "Admin", new { selectedCategory = "Index" })
}

<div class="panel panel-primary" style="margin:20px;">
    <div class="panel-heading">
        <h3>Roles</h3>
    </div>
    <table class="table table-striped">
        <tr><th>ID</th><th>Name</th><th>Users</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">No Roles</td></tr>
        }
        else
        {
            foreach (AppRole role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @if (role.Users == null || role.Users.Count == 0)
                        {
                            @: No Users in Role
                        }
                        else
                        {
                            <p>
                                @string.Join(", ", role.Users.Select(x =>
                             Html.GetUserName(x.UserId)))
                            </p>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("Delete", "RoleAdmin",
                            new { id = role.Id }))
                        {
                            @Html.ActionLink("編輯", "Edit", new { id = role.Id },
                                    new { @class = "btn btn-outline-primary" })
                            <button class="btn btn-outline-danger" type="submit">刪除</button>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Create Role", "Create", null, new { @class = "btn btn-primary" })