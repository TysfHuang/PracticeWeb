@model IEnumerable<Practice.Domain.Entities.Category>

<div class="btn-group-vertical" style="margin:20px;">
    @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-group" }))
    {
        <div class="input-group mb-3">
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control mr-sm-2", placeholder = "Search" })
            <button type="submit" class="btn btn-secondary my-2 my-sm-0">搜尋</button>
        </div>
    }
    <div class="btn-block">
        @Html.ActionLink("ALL", "Index", "Home", null, new { @class = "btn btn-outline-secondary btn-block" })
        @foreach (var link in Model)
        {
            @Html.RouteLink(link.Name,
                new { controller = "Home", action = "Index", category = @link.Name },
                new { @class = "btn btn-outline-secondary btn-block" + 
                (@link.Name == ViewBag.SelectedCategory ? " btn-secondary" : "") })
        }
    </div>
</div>
